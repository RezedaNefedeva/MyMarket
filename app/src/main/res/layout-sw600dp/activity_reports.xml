<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportsActivity"
    android:padding="10dp">

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_from_reports"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text="@string/date"
                android:textSize="40sp"
                android:textColor="@color/dark_violet"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_period_report"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="@string/period_report"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginVertical="10dp"
            android:layout_below="@+id/first"
            android:background="@drawable/btn_background_design"/>

        <Button
            android:id="@+id/btn_remains"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="@string/remains"
            style="@style/ButtonBordo"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/bordo"
            android:textStyle="bold"
            android:layout_below="@+id/btn_period_report"
            android:background="@drawable/btn_bordo"/>

        <Button
            android:id="@+id/btn_all_period"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="@string/all_period_report"
            android:textSize="60sp"
            android:textColor="@color/white"
            style="@style/ButtonPink"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/pink"
            android:textStyle="bold"
            android:layout_below="@+id/btn_remains"
            android:background="@drawable/btn_pink"/>

        <Button
            android:id="@+id/btn_add_minus"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="@string/add_minus"
            android:textSize="60sp"
            style="@style/ButtonBordo"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/btn_all_period"
            android:backgroundTint="@color/peach"
            android:background="@drawable/btn_bordo"/>

        <Button
            android:id="@+id/btn_dolg_report"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="@string/dolgi"
            android:textSize="60sp"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/btn_add_minus"
            android:backgroundTint="@color/peach"
            android:background="@drawable/btn_background_design" />

        <TextView
            android:id="@+id/edit_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_reports"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:paddingVertical="5dp"/>

</RelativeLayout>