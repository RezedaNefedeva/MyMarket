<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/item_background_design">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_user"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dolg_user"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/total_dolg_user"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_otdali"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:textSize="40sp"
            android:text="@string/btn_otdali"
            android:background="@drawable/btn_background_design"/>

    </LinearLayout>

</LinearLayout>